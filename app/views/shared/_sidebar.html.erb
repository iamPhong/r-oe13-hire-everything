          <%= image_tag("sc4.png", class:"sc-w20") %>
          Sách - truyện
        <% end %>
      </li>
      <li class="list-type-button types-5" data-id="5">
        <%= link_to "#",class:"cfi-open-child cfi-type-a" do %>
          <%= image_tag("sc5.png", class:"sc-w20") %>
          Thời trang
        <% end %>
      </li>
      <li class="list-type-button types-6" data-id="6">
        <%= link_to "#",class:"cfi-open-child cfi-type-a" do %>
          <%= image_tag("sc6.png", class:"sc-w20") %>
          Bất động sản
        <% end %>
      </li>
      <li class="list-type-button types-7" data-id="7">
        <%= link_to "#",class:"cfi-open-child cfi-type-a" do %>
          <%= image_tag("sc7.png", class:"sc-w20") %>
          Xe cộ
        <% end %>
      </li>
      <li class="list-type-button types-8" data-id="8">
        <%= link_to "#",class:"cfi-open-child cfi-type-a" do %>
          <%= image_tag("sc8.png", class:"sc-w20") %>
