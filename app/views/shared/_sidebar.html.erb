      <li class="list-type-button types-10" data-id="10">
        <%= link_to "#",class:"cfi-open-child cfi-type-a" do %>
          <%= image_tag("sc10.png", class:"sc-w20") %>
          <%= t ".other_product" %>
        <% end %>
      </li>
    </ul>
  </div>
  <div class="sb-user">
    <h5>
      <%= current_user.email %>
    </h5>
    <% if current_user.avatar? %>
      <%= image_tag(current_user.avatar.url, alt:"", class:"img-avatar w70") %>
    <% else %>
      <%= image_tag("user_default.png", alt:"", class:"img-avatar w70") %>
    <% end %>
    <p>
      Số dư tài khoản 0 VNĐ
    </p>
    <%= link_to t(".pay"), "#" %>
    <h6>
      <%= image_tag("icon2.png") %>
      <%= t ".desktop" %>
    </h6>
  </div>
  <div class="personal">
    <h6>
      <%= image_tag("icon3.png") %>
      <%= t ".man_acc" %>
    </h6>
    <ul class="ps ps1">
      <li class="thongtincanhan active-acc">
        <%= link_to do %>
          <i class="glyphicon glyphicon-user"></i>
          <%= t ".info" %>
        <% end %>
      </li>
      <li class="thongbao">
        <%= link_to do %>
          <i class="glyphicon glyphicon-folder-open"></i>
          <%= t ".notification" %>
          <span class="label label-danger">5</span>
        <% end %>
      </li>
    </ul>
    <h6>
      <%= image_tag("icon5.png") %>
      <%= t ".man_product" %>
    </h6>
    <ul class="ps ps2">
      <li class="danhsachchothue">
