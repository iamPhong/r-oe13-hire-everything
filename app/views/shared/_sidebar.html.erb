        <% end %>
      </li>
      <li class="list-type-button types-9" data-id="9">
        <%= link_to "#",class:"cfi-open-child cfi-type-a" do %>
          <%= image_tag("sc9.png", class:"sc-w20") %>
          Dụng cụ văn phòng - sự kiện
        <% end %>
