<div id="product" class="container accout-page">
  <div class="row">
    <%= render "shared/sidebar" %>
    <div class="col-sm-9 col-md-9 col-lg-9 list-lease">
      <div class="cate-crumb">
        <ul class="tit-pro">
          <li class="btn-home">
            <%= link_to root_path do %>
              <%= image_tag("home.png") %>
            <% end %>
          </li>
          <li class="arrow">
            <i class="fa fa-angle-right"></i>
          </li>
          <li>
            <span><%= t(".title", resource: resource.model_name.human) %></span>
          </li>
        </ul>
      </div>
      <div class="col-md-12 profile">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class:"form-horizontal form-profile", method: :put }) do |f| %>
        <%= devise_error_messages! %>
        <div class="form-group">
          <%= f.label :email, class:"control-label col-sm-2" %>
          <div class="col-sm-10">
            <%= f.text_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :firstname, class:"control-label col-sm-2" %>
          <div class="col-sm-10">
            <%= f.text_field :firstname, autofocus: true, autocomplete: "firstname", class:"form-control" %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :lastname, class:"control-label col-sm-2" %>
          <div class="col-sm-10">
            <%= f.text_field :lastname, autofocus: true, autocomplete: "lastname", class:"form-control" %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :birthday, class:"control-label col-sm-2" %>
          <div class="col-sm-3">
            <%= f.date_field :birthday, autofocus: true, autocomplete: "birthday", class:"form-control" %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :address, class:"control-label col-sm-2" %>
          <div class="col-sm-10">
            <%= f.text_field :address, autofocus: true, autocomplete: "address", class:"form-control" %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :phone_number, class:"control-label col-sm-2" %>
          <div class="col-sm-3">
            <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number", class:"form-control" %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :facebook, class:"control-label col-sm-2" %>
          <div class="col-sm-10">
            <div class="col-sm-2 text-right social">http://facebook.com/</div>
            <div class="col-sm-4">
              <%= f.text_field :facebook, autofocus: true, autocomplete: "facebook", class:"form-control" %>
            </div>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :website, class:"control-label col-sm-2" %>
          <div class="col-sm-10">
            <div class="col-sm-2 text-right social">http://</div>
            <div class="col-sm-4">
              <%= f.text_field :website, autofocus: true, autocomplete: "website", class:"form-control"%>
            </div>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :avatar, class:"control-label col-sm-2" %>
          <div class="col-sm-10">
            <div class="edit-img">
              <% if current_user.avatar? %>
                <%= image_tag(current_user.avatar.url, alt:"", class:"img-avatar square w70") %>
              <% else %>
                <%= image_tag("user_default.png", alt:"", class:"img-avatar square w70") %>
              <% end %>
            </div>
            <span class="btn btn-sm btn-primary btn-file">
              Ch·ªçn file...
              <%= f.file_field :avatar, autofocus: true, autocomplete: "avatar", class:"cfi-common-upload" %>
            </span>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :password, class:"control-label col-sm-2" %>
          <div class="col-sm-3">
            <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class:"form-control" %>
          </div>
          <div class="col-sm-7">
            <span><i>(<%= t ".leave_blank_if_you_don_t_want_to_change_it" %>)</i></span>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :password_confirmation, class:"control-label col-sm-2" %>
          <div class="col-sm-3">
            <%= f.password_field :password_confirmation, autofocus: true, autocomplete: "new-password", class:"form-control" %>
          </div>
          <div class="col-sm-7">
            <span><i>(<%= t ".leave_blank_if_you_don_t_want_to_change_it" %>)</i></span>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :current_password, class:"control-label col-sm-2" %>
          <div class="col-sm-3">
            <%= f.password_field :current_password, autofocus: true, autocomplete: "current_password", class:"form-control" %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-10 col-sm-offset-2">
            <%= f.submit t(".update"), class:"btn btn-success btn-update" %>
          </div>
        </div>
      <% end %>
        <div class="form-group">
          <div class="col-sm-10 col-sm-offset-2">
            <h3><%= t(".cancel_my_account") %></h3>
            <p><%= t(".unhappy") %>
            <%= button_to t(".cancel_my_account"), registration_path(resource_name), data: { confirm: t(".are_you_sure") }, method: :delete, class:"btn-lg btn-danger" %></p>
            <%= link_to t("devise.shared.links.back"), :back %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
